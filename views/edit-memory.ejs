  <body>
    <%- include('includes/header.ejs') %>

    <main>
      <form action="/edit-memory" method="POST">
        <h1>Edit memory</h1>
        <input type="hidden" value="<%= memory._id %>" name="id">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= memory.title %>">
        <label for="imageURL">Image</label>
        <input type="text" name="imageURL" id="imageURL"  value="<%= memory.imageUrl %>">
        <label for="gps">GPS position</label>
        <input type="text" name="gps" id="gps"  value="<%= memory.gps %>">
        <label for="comment">Comment</label>
        <textarea name="comment" id="comment" rows="6"><%= memory.comment %></textarea>
        <button type="submit">Create</button>
      </form>
    </main>

    <%- include('includes/footer.ejs') %>