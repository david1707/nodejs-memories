  <%- include('includes/head.ejs') %>
  </head>
  <body>
    <%- include('includes/header.ejs') %>

    <main>
      <%- include('includes/messages.ejs') %>

      <form action="/create-memory" method="POST">
        <h1>New memory</h1>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= oldMemory.title %>" class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid-field' : '' %>">
        <label for="imageUrl">Image</label>
        <input type="text" name="imageUrl" id="imageUrl"value="<%= oldMemory.imageUrl %>" class="<%= validationErrors.find(e => e.param === 'imageUrl') ? 'invalid-field' : '' %>">
        <label for="gps">GPS position</label>
        <input type="text" name="gps" id="gps"value="<%= oldMemory.gps %>" class="<%= validationErrors.find(e => e.param === 'gps') ? 'invalid-field' : '' %>">
        <label for="comment">Comment</label>
        <textarea name="comment" id="comment" rows="6" class="<%= validationErrors.find(e => e.param === 'comment') ? 'invalid-field' : '' %>"><%= oldMemory.comment %></textarea>
        <button type="submit">Create</button>
      </form>
    </main>

    <%- include('includes/footer.ejs') %>